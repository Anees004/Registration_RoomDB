<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB4B58"
    tools:context=".Activities.FinalPage">

    <ImageView
        android:id="@+id/out_toplogo"

        android:layout_width="170dp"
        android:layout_height="141dp"
        android:layout_margin="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:src="@drawable/finalscr"
        app:layout_constraintBottom_toTopOf="@+id/txt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtoutHi"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Hi,"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintRight_toLeftOf="@+id/txtout_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/out_toplogo"
        app:layout_constraintBottom_toTopOf="@+id/txtout_login"/>

    <TextView
        android:id="@+id/txtout_name"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Anees"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/out_toplogo"
        app:layout_constraintStart_toEndOf="@+id/txtoutHi"
        app:layout_constraintBottom_toTopOf="@+id/txtout_login"/>

    <TextView
        android:id="@+id/txtout_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Login Successfully."
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="33dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txtout_name"
       app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/txtout_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Wellcome"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/txtout_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>